{
    "languages": {
        "LaTeX": {
            "formatter": {
                "external": {
                    "command": "latexindent",
                    "arguments": ["-l", "-m"]
                }
            },
            "soft_wrap": "editor_width",
            "preferred_line_length": 160
        }
    },
    "lsp": {
        "texlab": {
            "settings": {
                "texlab": {
                    "build": { "forwardSearchAfter": true, "onSave": true },
                    "forwardSearch": {
                        "executable": "/Applications/Skim.app/Contents/SharedSupport/displayline",
                        "args": ["-r", "-g", "%l", "%p", "%f"]
                    }
                }
            }
        }
    }
}
